<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Score">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="645dp"
        android:layout_height="1067dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fond" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/podium" />

    <TextView
        android:id="@+id/place1"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/place2"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/place3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/place2"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.281" />

    <TextView
        android:id="@+id/textTilteSocre"
        android:layout_width="216dp"
        android:layout_height="41dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bois"
        android:gravity="center"
        android:text="@string/Tableau_des_scores"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView12" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="397dp"
        android:layout_height="164dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/place4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/place5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/place6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/place7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/place8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/place9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/place10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonMenu"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/bois"
        android:text="@string/Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textMode"
        android:layout_width="202dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toEndOf="@+id/buttonBefMode"
        app:layout_constraintTop_toBottomOf="@+id/textTilteSocre" />

    <TextView
        android:id="@+id/textPlateau"
        android:layout_width="202dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/place1"
        app:layout_constraintEnd_toStartOf="@+id/buttonNextBoard"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toEndOf="@+id/buttonBefBoard"
        app:layout_constraintTop_toBottomOf="@+id/textMode"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/buttonBefMode"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bois"
        android:gravity="center"
        android:text="←"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textMode" />

    <Button
        android:id="@+id/buttonNextMode"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/bois"
        android:gravity="center"
        android:text="→"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textMode"
        app:layout_constraintTop_toTopOf="@+id/textMode" />

    <Button
        android:id="@+id/buttonBefBoard"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bois"
        android:gravity="center"
        android:text="←"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textPlateau" />

    <Button
        android:id="@+id/buttonNextBoard"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/bois"
        android:gravity="center"
        android:text="→"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textPlateau" />

</android.support.constraint.ConstraintLayout>